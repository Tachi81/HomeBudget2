@using HomeBudget2.Models
@model IEnumerable<HomeBudget2.Models.Category>
@{
    Category first = null;
    foreach (var category in Model)
    {
        first = category;
        break;
    }
}
@if (first == null)
{
    <h2> Categories</h2>
}
else if (first.IsIncome)
{
    <h2>Income Categories</h2>
}
else
{
    <h2>Expense Categorie</h2>
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExpense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsIncome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsIncome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
