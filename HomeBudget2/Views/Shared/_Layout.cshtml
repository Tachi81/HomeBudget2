<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Budget</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/jQuery-UI/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accounts", "Index", "BankAccounts")</li>
                    <li>@Html.ActionLink("History", "HistoryChooseAccount", "FinancialOperations")</li>
                    <li>@Html.ActionLink("Expenses", "ExpensesIndex", "FinancialOperations")</li>
                    <li>@Html.ActionLink("Incomes", "IncomesIndex", "FinancialOperations")</li>
                    <li>@Html.ActionLink("Transfers", "TransfersIndex", "FinancialOperations")</li>

                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Categories and SubCategories
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li>@Html.ActionLink("Exp. Cat.", "ExpenseCategoryIndex", "Categories")</li>
                            <li>@Html.ActionLink("Exp. SubCat.", "ExpenseSubCategoryIndex", "SubCategories")</li>
                            <li>@Html.ActionLink("Income Cat.", "IncomeCategoryIndex", "Categories")</li>
                            <li>@Html.ActionLink("Income SubCat.", "IncomeSubCategoryIndex", "SubCategories")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HomeBudget2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jQuery-UI")
    @Scripts.Render("~/bundles/datepicker")
    @RenderSection("scripts", required: false)
</body>
</html>
