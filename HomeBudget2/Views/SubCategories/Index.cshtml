@using HomeBudget2.Models
@model HomeBudget2.ViewModels.SubCategoryViewModel

@{
    SubCategory firstSubCategoryfromTheList = Model.ListOfSubCategories.First();
}

@if (firstSubCategoryfromTheList.IsExpense)
{
    <h2>Expense SubCategories</h2>
}
@if (firstSubCategoryfromTheList.IsIncome)
{
    <h2>Income SubCategories</h2>

}
<h3>Index</h3>

@if (firstSubCategoryfromTheList.IsExpense)
{
    <p>
        @Html.ActionLink("Create New", "CreateExpenseSubCategory", "SubCategories")
    </p>
}
@if (firstSubCategoryfromTheList.IsIncome)
{
    <p>
        @Html.ActionLink("Create New", "CreateIncomeSubCategory", "SubCategories")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.SubCategoryName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.ListOfSubCategories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
