@model HomeBudget2.ViewModels.SubCategoryViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateExpenseSubCategory", "SubCategories")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.SubCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.IsExpense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.IsIncome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ListOfSubCategories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExpense)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsIncome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
