@using HomeBudget2.Models
@model HomeBudget2.ViewModels.SubCategoryViewModel

@{
    Category firstSubCategoryfromTheList = Model.ListOfSubCategories.First();
}

@if (firstSubCategoryfromTheList.IsExpense)
{
    <h2>List of Expense SubCategories</h2>
}
@if (firstSubCategoryfromTheList.IsIncome)
{
    <h2>List of Income SubCategories</h2>

}

@if (firstSubCategoryfromTheList.IsExpense)
{
    <p>
        @Html.ActionLink("Create New Expense Subcategory", "CreateExpenseSubCategory", "SubCategories")
    </p>
}
@if (firstSubCategoryfromTheList.IsIncome)
{
    <p>
        @Html.ActionLink("Create New Income Subcategory", "CreateIncomeSubCategory", "SubCategories")
    </p>
}

@if (firstSubCategoryfromTheList.CategoryName != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.LabelFor(model => model.SubCategory.ParentCategory.CategoryName, "Category")
            </th>
            <th>
                @Html.LabelFor(model => model.SubCategory.CategoryName, "Subcategory")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.ListOfSubCategories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
